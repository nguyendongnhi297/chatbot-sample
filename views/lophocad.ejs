<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Xem Khoa Hoc </title>
    <style>
     table.blueTable {
  border: 1px solid #1C6EA4;
  background-color: #EEEEEE;
  width: 100%;
  text-align: left;
  border-collapse: collapse;
  
}
table.blueTable td, table.blueTable th {
  border: 0px solid #AAAAAA;
  padding: 3px 2px;
}
table.blueTable td {
  font-size: 23px;
  border: 2px solid white;
  border-radius: 10px;
}
table.blueTable tr:nth-child(even) {
  background: #D0E4F5;
}
table.blueTable thead {
  background: lightblue;
  background: -moz-linear-gradient(top, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
  background: -webkit-linear-gradient(top, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
  background: linear-gradient(to bottom, #5592bb 0%, #327cad 66%, #1C6EA4 100%);
  border-bottom: 2px solid #444444;
}
table.blueTable thead th {
  font-size: 28px;
  /*font-weight: bold;*/
  color: #FFFFFF;
  border-left: 2px solid #D0E4F5;
  border-radius: 10px;
  text-align: center;
}
table.blueTable thead th:first-child {
  border-left: none;
}

table.blueTable  thead td {
  font-size: 5px;
  
}
table.blueTable  .links {
  text-align: right;
}
table.blueTable  .links a{
  display: inline-block;
  background: #1C6EA4;
  color: #FFFFFF;
  padding: 2px 8px;
  border-radius: 5px;
}  
    </style>
</head>
<body class="container" style="margin-top: 50px;">
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100" style="list-style-type:none;">
              <a href='javascript: history.go(-1)' style="text-decoration: none;font-size: 30px;">Back</a>
                <li class="nav-pill active">
                    <a class="nav-link" style="font-size: 40px;">Khoa Hoc</a>
                </li>
            </ul>
        </div>
    <div class="card-body">

        <% if(data.length) { %>
        <table class="blueTable" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">BaiHoc</th>
                    <th scope="col">MieuTa</th>
                    <th scope="col">NgayBD</th>
                    <th scope="col">NgayKT</th>
                    <th scope="col">BuoiHoc</th>
                    <th scope="col">KiNang</th>
                    <th scope="col">DoTuoi</th>
                    <th scope="col">HocPhi</th> 
                    <th scope="col">GiaoVien</th>   
                    <th scope="col">TenGV</th>
                    <th scope="col"></th> 
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <td name="id" id="id"><%= data[i].id %></td>
                    <td><%= data[i].baihoc%></td>
                    <td><%= data[i].mieuta%></td>
                    <td><%= data[i].NgayBatDau%></td>
                    <td><%= data[i].NgayKetThuc%></td>
                    <td><%= data[i].ngayhoc_id%></td>
                    <td><%= data[i].kinang_id%></td>
                    <td><%= data[i].dotuoi_id%></td>
                    <td><%= data[i].hocphi%></td>
                    <td><%= data[i].giaovien_id%></td>
                    <td><%= data[i].tengv%></td>
                    <td>
                    <a   onclick="return alert('Are you sure?')" href="admin/delete/<%=data[i].id%>">Xóa </a>
                    <a    href="themlop/sualop/<%=data[i].id%>" style="background-color:red">Sửa </a>
                    </td>
                </tr>
                </form> 
            <% } %>   
            </tbody>
        </table>
        <% } %>

        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No Class found!</p>
        <% } %>

        </div>
    </div>

</body>
<script>
</script>
</html>